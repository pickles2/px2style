            "is-loop": {
                "fieldType": "input",
                "type": "select",
                "label": "ループしますか？",
                "display": "radio",
                "options": [
                    {
                        "label": "無効",
                        "value": ""
                    },
                    {
                        "label": "有効",
                        "value": "1"
                    }
                ]
            },
            "show-prevnext": {
                "fieldType": "input",
                "type": "select",
                "label": "前と次のスライドを少しだけ見せますか？",
