                    {
                        "label": "無効",
                        "value": ""
                    },
                    {
                        "label": "有効",
                        "value": "1"
                    }
                ]
            },
            "show-slide-numbers": {
                "fieldType": "input",
                "type": "select",
                "label": "スライド番号を表示しますか？",
                "display": "radio",
                "options": [
                    {
                        "label": "表示しない",
                        "value": ""
